<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/getReadyBarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/getReady"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"/>

    <ProgressBar
        android:id="@+id/getReadyBarView"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="192dp"
        android:minWidth="192dp"
        android:maxWidth="192dp"
        android:layout_height="192dp"
        android:minHeight="192dp"
        android:maxHeight="192dp"
        android:max="3"
        android:progress="2"
        android:progressDrawable="@drawable/get_ready_progress"
        android:background="@drawable/get_ready_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/getReadyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="2"
        android:textColor="@color/colorAccent"
        android:textSize="64sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>