<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/quizIconView"
            android:layout_width="96dp"
            android:minWidth="96dp"
            android:maxWidth="96dp"
            android:layout_height="96dp"
            android:minHeight="96dp"
            android:maxHeight="96dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@null"
            android:src="@drawable/general_knowledge"
            app:tint="@color/text" />

        <TextView
            android:id="@+id/getReadyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getReady"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"/>

        <com.mackhartley.roundedprogressbar.RoundedProgressBar
            android:id="@+id/getReadyTimerView"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:minHeight="8dp"
            android:maxHeight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rpbAnimationLength="20"
            app:rpbProgressBgColor="@color/background"
            app:rpbProgressColor="@color/colorAccent"
            app:rpbShowProgressText="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>