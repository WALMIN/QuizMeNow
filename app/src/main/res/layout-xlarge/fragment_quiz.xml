<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/questionDotLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/questionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/questionDot0"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot1"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot2"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot3"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot4"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot5"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot6"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot7"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot8"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

        <ImageView
            android:id="@+id/questionDot9"
            android:layout_width="24dp"
            android:minWidth="24dp"
            android:maxWidth="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/question_dot" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/questionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:minHeight="384dp"
        android:maxHeight="384dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/questionImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="false"
                android:src="@null"
                android:contentDescription="@null" />

            <RelativeLayout
                android:id="@+id/quizQuestionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/questionView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/question"
                    android:textAllCaps="true"
                    android:textColor="@color/textOnDark"
                    android:textSize="70sp"
                    app:autoSizeMaxTextSize="70sp"
                    app:autoSizeTextType="uniform" />

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/answerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/answer0Card"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:minHeight="256dp"
                android:maxHeight="256dp"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/answer0View"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/answer0"
                    android:textAllCaps="true"
                    android:textColor="@color/answerCardText"
                    android:textSize="40sp"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeTextType="uniform" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/answer2Card"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:minHeight="256dp"
                android:maxHeight="256dp"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/answer2View"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/answer2"
                    android:textAllCaps="true"
                    android:textColor="@color/answerCardText"
                    android:textSize="40sp"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeTextType="uniform" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/answer1Card"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:minHeight="256dp"
                android:maxHeight="256dp"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/answer1View"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/answer1"
                    android:textAllCaps="true"
                    android:textColor="@color/answerCardText"
                    android:textSize="40sp"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeTextType="uniform" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/answer3Card"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:minHeight="256dp"
                android:maxHeight="256dp"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:contentPadding="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/answer3View"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/answer3"
                    android:textAllCaps="true"
                    android:textColor="@color/answerCardText"
                    android:textSize="40sp"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeTextType="uniform" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <com.mackhartley.roundedprogressbar.RoundedProgressBar
        android:id="@+id/gameTimerView"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:minHeight="16dp"
        android:maxHeight="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/questionLayout"
        app:rpbAnimationLength="100"
        app:rpbProgressBgColor="@color/background"
        app:rpbProgressColor="@color/colorAccent"
        app:rpbShowProgressText="false" />

    <TextView
        android:id="@+id/tapToContinueView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="normal"
        android:text="@string/tapToContinue"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/questionLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>